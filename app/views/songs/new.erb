<form action="/songs" method="post">
    <h3>Create New Song</h3>

    <label>Name</label>
    <input type="text" name="song[name]" id="name">

    <label>Artist</label>
    <input type="text" name="artist[name]" id="artist_name">

    <br/>
    <br/>
    <label>Genres</label>
    <% @genres.each do |genre| %>
        <br/>

        <input type= "checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>" /> 

        <%= genre.name %>
        <br/>

    <% end %>

    <input type="submit" value="create_song">
</form>
